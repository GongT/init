{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "configure",
			"type": "process",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"command": "cmake",
			"args": [
				".."
			]
		},
		{
			"label": "make",
			"type": "process",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"configure"
			],
			"command": "make",
			"args": [
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}